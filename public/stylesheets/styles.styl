@import 'nib'

$nice-gris = #f3f5f8
$nice-black = #22282B
$nice-morado = #564390
$nice-sub-black = #85939D
$nice-border-color = #e0e4ea


body
  font: 14px 'Roboto', sans-serif
  padding: 0px
  margin: 0px
  background-color: #f3f5f8
h1,h2,h3,h4,h5,p
  margin 0

ul
  padding: 0
  margin: 0
  list-style: none
a
  font-size: 16px
  color: white
  text-decoration: none

*
  box-sizing: border-box
.coverimage
  background-size: cover
  background-position: center


.type
  &-twitter
    background-color: #31aaf6
  &-instagram
    background-color: #3f6d93

.astable
  width: 100%
  height: 100%
  display: table

.ascell
  width: 100%
  height:100%
  display:table-cell
  vertical-align:middle
  text-align:center

.center
  text-align: center

.nice-input
  padding 10px 20px
  font-size: 20px
  border 1px solid $nice-border-color
  outline: none

.nice-button
  padding 10px 15px
  background-color: $nice-morado
  display: inline-block
  border-radius: 3px
  font-size: 14px
  border 0px
  color white
  &:hover
    background-color: #7f579d
    cursor: pointer
  i
    margin-right: 5px
    font-size: 16px

.w-tip
  position: absolute
  top 0
  left 0
  width: 100%
  height: 100%

img
  max-width: 100%
.main-content
  overflow-y: hidden
  background-color: #f3f5f8
  #preview
    background-color: $nice-gris
    width: 70%
    display: inline-block
    vertical-align: top
    position: relative
    overflow: auto
    .info-medio
      background-color: #fcfcfd
      position: fixed
      z-index: 2
      font-size: 14px
      bottom: 0px
      right 0
      width: 70%
      text-align: left
      padding 10px 10px
      box-shadow: 0px -1px 1px rgba(0, 0, 0, 0.2)
      .wrap-info
        padding 0px 10px
        display: flex
        .left-medio
          margin-right: auto
          align-self: center
        .right-medio
          align-self: center
        .names-medio
          display: inline-block
          vertical-align: middle
          font-size: 12px
          .top-name
            margin-bottom: 3px
            span
              color $nice-black
          .bottom-name
            margin-top: 3px
            a
              &:hover
                text-decoration: underline
            span
              font-size: 12px
              color #adb9c1
        .img-medio
          width: 50px
          vertical-align: middle
          height: 50px
          border-radius: 50%
          margin-right: 5px
          display: inline-block
    .in-preview
      text-align center
      width 100%
      margin auto
      height: 100%
      #display
        position: absolute
        width: 100%
        height: 100%
        left 0
        display: flex
        justify-content: center
        padding-top 180px
        .wrap-medio
          align-self: center
          max-width: 70%
          padding 15px
          background-color: #ffffff
          border 1px solid #dee4e7
          text-align: left
          border-radius: 5px
          color $nice-black
          position: relative
          margin-bottom: 100px
          .share-medio
            position absolute
            right 10px
            top 10px
            color $nice-morado
          .des-medio
            margin-bottom: 15px
            line-height: 1.5
            font-size: 14px
            font-weight: 200
          .big-img-medio
            border-radius: 2px
          .name
            font-size 16px
            margin-bottom: 10px

      .tip
        font-size 100px
        color #e1e7ea
        margin: auto
        margin-bottom: 50px
        width: 50%
      .explain
        p
          display: block
          margin: 10px 0px
  #feed
    width: 30%
    overflow: auto
    border-right: 1px solid #e3edef
    display: inline-block
    background-color: #fff
    vertical-align: top
    .item
      border-top: 1px solid #e0e4ea
      border-bottom: 1px solid #e0e4ea
      position: relative
      padding 15px
      &:hover
        background-color: #f1f1f1
      &-content
        width: 80%
        display: inline-block
        font-size: 13px
        vertical-align: top
        color $nice-black
        &-text
          p
            line-height: 1.5
        &-link
          span
            color #adb9c1
            font-size: 13px
            margin-bottom: 5px
            display: block
            &:hover
              text-decoration: underline
      &-wrapper
        font-size: 0
        .block
          font-size: 14px
      .hour
        position: absolute
        top 10px
        right 10px
        color #1799dd
        font-size: 11px
      &-img
        width: 20%
        display: inline-block
        text-align: center
        vertical-align: top
        &-user
          width: 50px
          height: 50px
          border-radius: 50%
          margin: auto
          position: relative
          &-type
            width: 20px
            height: 20px
            border-radius: 50%
            position: absolute
            right -5px
            bottom: -5px
            color white
            text-align: center
            font-size: 11px
            display: flex
            justify-content: center
            border 1px solid white
            i
              align-self: center

.top-bar
  background-color #564390
  padding 0
  .wrap-menu
    display inline-block
    .menu-item
      font-size: 20px
      padding 12px 20px
      span
        font-size: 14px
      &.active
        background-color: #7f579d
      .fa
        margin-right 5px
        display: inline-block
  .logo
    padding 12px 20px
    font-size: 20px
    display: inline-block
    &:hover
      color #d0ebf8

.wrapper
  width: 80%
  min-width: 1200px
  margin: 0 auto

#new-sub
  margin-bottom: 20px


#imgContent
  font-size: 0px
  background-color: #f3f5f8
*
  box-sizing: border-box

#imgContent
  .img-item
    border-radius: 3px
    width: 25%
    vertical-align: top
    height: 300px
    overflow: hidden
    background-color: #373737
    display: flex
    justify-content: center /* align horizontal */
    align-items: center /* align vertical */
    flex-direction: row

.the-tweet
  position:relative

.user-data
  position: absolute
  left: 0px
  top: 0px
  padding: 3px

.user-data
  img
    margin-right: 5px
    width: 50px
    display: inline-block
    vertical-align: middle

.user-data
  span
    line-height: 50px

.tweet-wrap
  border: 1px solid #CACACA

#imgContent
  .img-item
    .tweets
      padding: 0px 15px

.stripe
  background-color: rgba(0,0,0,0.86)
  padding: 20px 15px !important

#imgContent
  .img-item
    &:hover
      background-color: rgba(#4776A0,0.7)


#imgContent
  .img-item
    img
      width: 100%

.tweet
  color: white

.tweet_link
  color: #C3C3C3
  text-decoration: underline

.tweet_user
  color: whitesmoke

.hashtag
  color: #C3C3C3
  &:hover
    text-decoration: underline

.wrap-config
  width: 60%
  padding 20px
  border-radius: 3px
  margin: 50px auto
  background: #ffffff
  border: 1px solid $nice-border-color
  position: relative
  .add-topic-form
    .nice-input
      width: 80%
      display: inline-block
      vertical-align: middle
      height: 50px
    .nice-button
      width: 20%
      vertical-align: middle
      border-radius: 0
      height: 50px
  .separator
    border-bottom: 1px solid $nice-gris
    width: 100%
    margin 20px 0px
    display: block
  .add-corner
    position: absolute
    right: 20px
    top 20px
  .title-section
    margin-bottom: 5px
    color $nice-black
    display: block
  .desc-section
    color $nice-sub-black
    margin-bottom: 10px
  .sub-list
    li
      background-color: #f8f9fb
      color $nice-black
      padding 5px 10px
      margin 5px 5px
      border: 1px solid #e0e4ea
      border-radius: 3px
      display: inline-block
      &:first-child
        margin-left: 0

#menu
  position: fixed
  bottom: 0px
  right: 0px
  margin: 10px
  z-index: 1000
  opacity: 0.7
  transition: all 0.3s ease-in

#menu
  &:hover
    opacity: 1
  ul
    li
      list-style:none
      display: inline-block
      .audio-enabled
        color: red
      a
        font-size: 60px
        color: #E40443


@media (max-width: 500px)
  #imgContent
    .img-item
      width: 100%
      height: auto
      padding: 25px 15px
